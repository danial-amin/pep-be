# Database Configuration
POSTGRES_USER=pep_user
POSTGRES_PASSWORD=pep_password
POSTGRES_DB=pep_db
DATABASE_URL=postgresql://pep_user:pep_password@localhost:5432/pep_db

# Vector Database Configuration
# Use Pinecone (recommended - free tier available) or ChromaDB (local development)
VECTOR_DB_TYPE=pinecone  # "pinecone" or "chroma"

# Pinecone Configuration (for production/free tier)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws  # or "gcp-starter" for free tier
PINECONE_INDEX_NAME=pep-documents

# ChromaDB Configuration (for local development only)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Adjust these if you have different rate limits
# MAX_TOKENS_PER_CHUNK=20000  # Max tokens per processing chunk
# CHUNK_OVERLAP_TOKENS=500     # Overlap between chunks
# PROCESSING_DELAY_SECONDS=2.0 # Delay between chunk processing

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Image Generation (optional - can use OpenAI DALL-E or other services)
IMAGE_GENERATION_SERVICE=openai

# Frontend Configuration
VITE_API_URL=http://localhost:8080/api/v1

